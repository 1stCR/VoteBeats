{
  "name": "votebeats-desktop-helper",
  "version": "1.0.0",
  "description": "VoteBeats Desktop Helper - Automatic Now Playing detection via Spotify monitoring",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "com.votebeats.desktop-helper",
    "productName": "VoteBeats Desktop Helper",
    "copyright": "Copyright 2025 VoteBeats",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VoteBeats Helper"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.music",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "VoteBeats Desktop Helper",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Audio"
    },
    "publish": {
      "provider": "github",
      "owner": "votebeats",
      "repo": "desktop-helper"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "node-fetch": "^2.7.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
